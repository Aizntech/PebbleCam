<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".PageFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <VideoView
        android:id="@+id/video_thumb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"></VideoView>

    <ImageButton
        android:id="@+id/mPauseVideo"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="center|center_vertical"
        android:background="@null"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:src="@drawable/ic_rounded_pause_button" />

    <ImageButton
        android:id="@+id/mPlayVideo"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="center|center_vertical"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play_button_inside_a_circle"
        android:tint="@color/white" />

    <ImageButton
        android:id="@+id/mBackVideo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="33dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:scaleX="-1"
        android:src="@drawable/ic_next"
        android:tint="@color/white" />

    <ImageButton
        android:id="@+id/mNextVideo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="33dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_next"
        android:tint="@color/white" />

</FrameLayout >