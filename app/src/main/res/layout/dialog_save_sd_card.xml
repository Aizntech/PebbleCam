<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/save_dialog_layout"
    android:layout_width="450dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/asset4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Save to SD Card"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_height="100dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:text="Move all files from phone to SD card. They will still be available through the Gallery. "
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="100dp"
            android:src="@drawable/asset2"/>

        <ImageButton
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="100dp"
            android:src="@drawable/asset3"/>

    </LinearLayout>
</LinearLayout>